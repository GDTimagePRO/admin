<?xml version="1.0"?>
<layout version="0.1.0">
	<checkout_cart_index translate="label">
		<reference name="checkout.cart">
			<action method="addItemRender">
				<type>simple</type>
				<block>checkout/cart_item_renderer</block>
				<template>Genesys_Redirect/checkout/cart/item/default.phtml</template>
			</action>
		</reference>
	</checkout_cart_index>
	<default>
		<reference name="minicart_content">
			<action method="addItemRender">
				<type>simple</type>
				<block>checkout/cart_item_renderer</block>
				<template>Genesys_Redirect/checkout/cart/minicart/default.phtml</template>
			</action>
		</reference>
	</default>
	<catalog_product_view translate="label">
		<reference name="product.info.addtocart">
			 <action method="setTemplate"><template>Genesys_Redirect/catalog/product/view/addtocart.phtml</template></action>
		</reference>
	</catalog_product_view>
	<catalog_category_default translate="label">
		<reference name="product_list">
			<action method="setTemplate"><template>Genesys_Redirect/catalog/product/list.phtml</template></action>
		</reference>
	</catalog_category_default>
	<catalog_category_layered translate="label">
		<reference name="product_list">
			<action method="setTemplate"><template>Genesys_Redirect/catalog/product/list.phtml</template></action>
		</reference>
	</catalog_category_layered>
	<catalog_product_compare_index translate="label">
		<reference name="catalog.compare.list">
			<action method="setTemplate"><template>Genesys_Redirect/catalog/product/compare/list.phtml</template></action>
		</reference>
	</catalog_product_compare_index>
</layout>